<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IlanYukleme">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/topMenu"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="1dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:src="@drawable/back_arrow_navigation_svgrepo_com__2_" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="9"
                        android:gravity="center"
                        android:paddingRight="20dp"
                        android:text="İlan Yükle"
                        android:textSize="18sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:layout_marginTop="15dp"
                android:onClick="selectImage"
                android:src="@drawable/select" />


            <TextView
                android:id="@+id/txt2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="İlan Türü"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="300dp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="#FFFFFF"
                android:backgroundTint="#D1CECE"
                android:ems="10"
                android:hint="İlan Türü"
                android:inputType="text" />


            <EditText
                android:id="@+id/editTextText7"
                android:layout_width="300dp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#FFFFFF"
                android:backgroundTint="#D1CECE"
                android:ems="10"
                android:hint="İlan Başlığı"
                android:inputType="text" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="Şehir"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="300dp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="#FFFFFF"
                android:backgroundTint="#D1CECE"
                android:ems="10"
                android:hint="Şehir"
                android:inputType="text" />


            <EditText
                android:id="@+id/editTextText9"
                android:layout_width="300dp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="#FFFFFF"
                android:backgroundTint="#D1CECE"
                android:ems="10"
                android:hint="İlçe"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextText10"
                android:layout_width="300dp"
                android:layout_height="284dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="#FFFFFF"
                android:backgroundTint="#D1CECE"
                android:ems="10"
                android:gravity="top"
                android:hint="Açıklama"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextText11"
                android:layout_width="300dp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="#FFFFFF"
                android:backgroundTint="#D1CECE"
                android:ems="10"
                android:hint="Sağlık Durumu"
                android:inputType="text" />

            <TextView
                android:id="@+id/txt4"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="Hayvan Kategori"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="300dp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="#FFFFFF"
                android:backgroundTint="#D1CECE"
                android:ems="10"
                android:hint="Hayvan Kategorisi"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextText13"
                android:layout_width="300dp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="#FFFFFF"
                android:backgroundTint="#D1CECE"
                android:ems="10"
                android:hint="Hayvanın Cinsi"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextText17"
                android:layout_width="300dp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="#FFFFFF"
                android:backgroundTint="#D1CECE"
                android:ems="10"
                android:hint="Telefon Numarası"
                android:inputType="phone" />

            <Button
                android:id="@+id/button2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/renk"
                android:onClick="uploadButton"
                android:text="İlanı Yükle!"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>