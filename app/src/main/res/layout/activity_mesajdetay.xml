<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Mesajdetay"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/topMenu"
            android:layout_width="match_parent"

            android:layout_height="40dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="MESAJLAR"
                android:textSize="30dp">

            </TextView>


        </androidx.cardview.widget.CardView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:src="@drawable/underline">

        </ImageView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#D8D7D7"
            app:cardCornerRadius="25dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="126dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/account_svgrepo_com" />

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="Kullanıcı adı"
        android:textSize="16sp"
        android:textStyle="bold" />
            </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@drawable/underline">

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#3BC2D5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mesajbaslik"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:text="İlanın Başlığı"
                        android:textColor="#000000"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/mesaj"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:paddingStart="10dp"

                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/alici"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="alici"
                        android:layout_gravity="end"
                        android:gravity="end">

                    </TextView>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:src="@drawable/underline">

                    </ImageView>


                    <TextView
                        android:id="@+id/iletisim"
                        android:layout_width="match_parent"
                        android:layout_height="51dp"

                        android:layout_marginBottom="1dp"

                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        android:text="İletişim Bilgileri"
                        android:textColor="@color/black"
                        android:textSize="21sp" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:src="@drawable/underline">

                    </ImageView>
                    <LinearLayout
                        android:id="@+id/kullanicibilgilerilayoutss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#BFBFBF"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView12ss"
                            android:layout_width="126dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:src="@drawable/email2" />

                        <TextView
                            android:id="@+id/gonderenemail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="E-Posta"
                            android:textSize="16sp" />
                    </LinearLayout>



                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:src="@drawable/underline">

                    </ImageView>

                    <ImageView
                        android:id="@+id/imageView86"
                        android:layout_width="200dp"
                        android:layout_height="46dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/date_range_svgrepo_com" />
                    </LinearLayout>



                        <TextView
                            android:id="@+id/tarih"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="center"
                            android:text="tarih"
                            android:textSize="16sp" />


                    <Button
                        android:id="@+id/kaydet"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/renk"
                        android:text="Yanıtla"
                        android:textAllCaps="false"
                        android:textSize="21sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>
</ScrollView>