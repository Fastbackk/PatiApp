<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HesapDetay"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/topMenu"
            android:layout_width="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/buttonBack"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:src="@drawable/back_arrow_navigation_svgrepo_com__2_" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    android:text="Hesap Detayları"
                    android:textSize="18sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>





        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="140dp"
            android:layout_gravity="center"
            android:layout_marginEnd="30dp"
            android:background="@drawable/cardviewborder"
            android:elevation="10dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextText2"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:layout_height="50dp"
                        android:background="@drawable/edit6"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"

                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Ad"
                        android:inputType="text"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editTextText3"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:layout_height="50dp"
                        android:background="@drawable/edit6"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="Soyad"
                        android:inputType="text"
                        android:textSize="18sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/editTextText4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:padding="6dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edit6"
                    android:drawableStart="@drawable/hesabulhesab2"
                    android:drawablePadding="10dp"
                    android:hint="Kullanıcı Adı"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editTextTextEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:padding="6dp"
                    android:background="@drawable/edit6"
                    android:drawableStart="@drawable/email2"
                    android:drawablePadding="10dp"
                    android:hint="E-Posta"
                    android:inputType="textEmailAddress"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:onClick="onClick"
                    android:text="Şifre Değiştir" />

                <TextView
                    android:id="@+id/kayitol"
                    android:layout_width="258dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edit5"
                    android:layout_marginTop="20dp"
                    android:drawableStart="@drawable/check_mark_square_2_svgrepo_com"
                    android:backgroundTint="#37B53A"
                    android:text="Bilgilerimi Güncelle"
                    android:textAllCaps="false"
                    android:textSize="23sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>